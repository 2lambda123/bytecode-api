<ui:ObservableWindow
	x:Class="Playground.Wpf.MainWindow"
	x:Name="mainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Playground.Wpf"
	xmlns:api="https://schemas.bytecode77.com/2019/xaml/api"
	xmlns:ui="https://schemas.bytecode77.com/2019/xaml/presentation"
	DataContext="{Binding ViewModel, ElementName=mainWindow}"
	Title="{Binding Title}" Width="800" Height="500" WindowStartupLocation="CenterScreen">
	<Grid>
		<local:MainUserControl x:Name="MainUserControl" />
	</Grid>
</ui:ObservableWindow>